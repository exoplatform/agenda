<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>kudos</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <!-- War -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>${project.groupId}:agenda-webapps:war</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>agenda.war</outputFileNameMapping>
    </dependencySet>
    <!-- Libraries -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>${project.groupId}:*:jar</include>
        <include>backport-util-concurrent:backport-util-concurrent:jar</include>
        <include>org.mnode.ical4j:ical4j:jar</include>
      </includes>
      <scope>provided</scope>
      <outputFileNameMapping>${artifact.build.finalName}.jar</outputFileNameMapping>
    </dependencySet>
  </dependencySets>
</assembly>
