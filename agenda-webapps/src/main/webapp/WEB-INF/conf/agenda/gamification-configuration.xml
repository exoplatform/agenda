  <external-component-plugins>
    <target-component>org.exoplatform.services.listener.ListenerService</target-component>
    <component-plugin>
      <name>exo.agenda.event.created</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.agenda.listener.AgendaEventGamificationIntegrationListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.agenda.event.updated</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.agenda.listener.AgendaEventGamificationIntegrationListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.agenda.event.poll.created</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.agenda.listener.AgendaEventGamificationIntegrationListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.agenda.event.poll.voted.all</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.agenda.listener.AgendaEventGamificationIntegrationListener</type>
    </component-plugin>
    <component-plugin>
      <name>exo.agenda.event.responseSent</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.agenda.listener.AgendaEventAttendeeGamificationIntegrationListener</type>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.addons.gamification.service.setting.rule.RuleRegistry</target-component>
    <component-plugin>
      <name>rule.CreateEvent</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addons.gamification.service.setting.rule.model.RuleConfig</type>
      <init-params>
        <value-param>
          <name>rule-title</name>
          <value>CreateEvent</value>
        </value-param>
        <value-param>
          <name>rule-description</name>
          <value>Create an event</value>
        </value-param>
        <value-param>
          <name>rule-score</name>
          <value>15</value>
        </value-param>
        <value-param>
          <name>rule-zone</name>
          <value>Teamwork</value>
        </value-param>
        <value-param>
          <name>rule-enable</name>
          <value>true</value>
        </value-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>rule.UpdateEvent</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addons.gamification.service.setting.rule.model.RuleConfig</type>
      <init-params>
        <value-param>
          <name>rule-title</name>
          <value>UpdateEvent</value>
        </value-param>
        <value-param>
          <name>rule-description</name>
          <value>Update an event</value>
        </value-param>
        <value-param>
          <name>rule-score</name>
          <value>5</value>
        </value-param>
        <value-param>
          <name>rule-zone</name>
          <value>Teamwork</value>
        </value-param>
        <value-param>
          <name>rule-enable</name>
          <value>true</value>
        </value-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>rule.ReplyToEvent</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addons.gamification.service.setting.rule.model.RuleConfig</type>
      <init-params>
        <value-param>
          <name>rule-title</name>
          <value>ReplyToEvent</value>
        </value-param>
        <value-param>
          <name>rule-description</name>
          <value>Reply to an event</value>
        </value-param>
        <value-param>
          <name>rule-score</name>
          <value>10</value>
        </value-param>
        <value-param>
          <name>rule-zone</name>
          <value>Teamwork</value>
        </value-param>
        <value-param>
          <name>rule-enable</name>
          <value>true</value>
        </value-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>rule.CreateDatePoll</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addons.gamification.service.setting.rule.model.RuleConfig</type>
      <init-params>
        <value-param>
          <name>rule-title</name>
          <value>CreateDatePoll</value>
        </value-param>
        <value-param>
          <name>rule-description</name>
          <value>Create Date Poll</value>
        </value-param>
        <value-param>
          <name>rule-score</name>
          <value>10</value>
        </value-param>
        <value-param>
          <name>rule-zone</name>
          <value>Teamwork</value>
        </value-param>
        <value-param>
          <name>rule-enable</name>
          <value>true</value>
        </value-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>rule.VoteDatePoll</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addons.gamification.service.setting.rule.model.RuleConfig</type>
      <init-params>
        <value-param>
          <name>rule-title</name>
          <value>VoteDatePoll</value>
        </value-param>
        <value-param>
          <name>rule-description</name>
          <value>Vote in a Date Poll</value>
        </value-param>
        <value-param>
          <name>rule-score</name>
          <value>5</value>
        </value-param>
        <value-param>
          <name>rule-zone</name>
          <value>Teamwork</value>
        </value-param>
        <value-param>
          <name>rule-enable</name>
          <value>true</value>
        </value-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>